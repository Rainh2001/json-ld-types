{
  "compilerOptions": {
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": false,
    "incremental": true,
    "lib": ["es2018"],
    "moduleResolution": "node",
    "removeComments": false,
    "skipLibCheck": true,
    "strict": false,
    "strictFunctionTypes": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "stripInternal": false,
    "composite": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "typeRoots": ["types", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test-serial.ts", "**/__mocks__/**", "**/node_modules", "**/dist"]
}
